@model List<CallCenterGetEquNetBuySellResult>
<div class="space-above">
    <table class="table table-striped @(Model.Count > 0 ? "sortable" : "")">
        <thead>
            <tr>
                <th class="text-center can-hide-label">
                    Transaction Date
                </th>
                <th class="text-center can-hide-label">
                    Settlement Date
                </th>
                <th class="text-center can-hide-label">
                    Type
                </th>
                <th class="text-center can-hide-label">
                    Activities
                </th>
                <th class="can-hide-label">
                    Client Received
                </th>
                <th class="can-hide-label">
                    Client Paid
                </th> 
            </tr>
        </thead>
        <tbody>
        @if (Model.Count > 0)
        {
            foreach (var item in Model)
            {
            <tr>
                <td class="text-center can-hide-value" data-dateformat="D-MMMM-YYYY">
                   @(item.Tradedate.HasValue ? item.Tradedate.Value.ToString("d-MMM-yyyy") : string.Empty)
                </td>
                <td class="text-center can-hide-value" data-dateformat="D-MMMM-YYYY">
                   @item.Settdate.ToString("d-MMM-yyyy")
                </td>
                <td class="text-center can-hide-value">
                    @item.AssetType
                </td>
                <td class="text-center can-hide-value">
                    @item.NetDesc
                </td>
                <td class="can-hide-value">
                    @(item.ClientReceive.HasValue ? item.ClientReceive.Value.ToString("#,0.00") : string.Empty)
                </td>       
                <td class="can-hide-value">
                   @(item.ClientPay.HasValue ? item.ClientPay.Value.ToString("#,0.00") : string.Empty)
                </td>                             
            </tr> 
            }
        }
        else
        {
             <tr class="row-no-data can-hide-value">
                <td colspan="6" class="text-center">No data.</td>
             </tr>              
        }   
        </tbody>
    </table>
</div>
